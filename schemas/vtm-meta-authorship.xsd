<xs:schema xmlns:xs='http://www.w3.org/2001/XMLSchema'
  xmlns='http://vectortron.com/xml/media/meta/authorship'
  targetNamespace='http://vectortron.com/xml/media/meta/authorship' elementFormDefault='qualified'>

